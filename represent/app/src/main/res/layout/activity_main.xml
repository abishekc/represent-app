    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighterSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_linear"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/us_rep_text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkSlateGray"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.15"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="U.S. REPRESENTATIVE"
                android:textColor="@color/gold"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_third_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/baseline_account_circle_white_36dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_third_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/party_third_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="16dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/link_view_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="openBrowser">

                </ImageView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighterSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/us_rep_text_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkSlateGray"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.15"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="U.S. SENATORS"
                android:textColor="@color/gold"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_first_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/baseline_account_circle_white_36dp"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_first_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp"
                        android:paddingTop="1dp"/>

                    <TextView
                        android:id="@+id/party_first_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryBright"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/link_view_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="openBrowser">

                </ImageView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighterSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_second_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/baseline_account_circle_white_36dp"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_second_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp"
                        android:paddingTop="1dp"/>

                    <TextView
                        android:id="@+id/party_second_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryBright"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/link_view_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="openBrowser">

                </ImageView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>