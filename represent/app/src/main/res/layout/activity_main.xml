<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:fontFamily="@font/nevis"
        android:letterSpacing="0.2"
        android:paddingTop="40dp"
        android:paddingLeft="0dp"
        android:text="REPRESENT"
        android:textColor="@color/tomato"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/us_rep_text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.15"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="U.S. REPRESENTATIVE"
                android:textColor="@color/gold"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_third_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/topo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_third_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/party_third_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/us_rep_text_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing="0.15"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="U.S. SENATORS"
                android:textColor="@color/gold"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_first_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/topo"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_first_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp"
                        android:paddingTop="1dp"/>

                    <TextView
                        android:id="@+id/party_first_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryBright"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkSlateGray"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image_second_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/topo"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/name_second_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SENATOR"
                        android:textColor="@color/colorPrimaryBright"
                        android:textSize="18dp"
                        android:paddingTop="1dp"/>

                    <TextView
                        android:id="@+id/party_second_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Party"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryBright"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/address_linear"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="2dp"
            app:srcCompat="@drawable/baseline_edit_white_24dp"
            android:tint="@color/lightFlatBlue"
            android:scaleX="-1"/>

        <EditText
            android:inputType="textPostalAddress"
            android:id="@+id/address_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_reg"
            android:paddingLeft="3dp"
            android:text="ZipCode"
            android:textColor="@color/colorPrimaryBright"
            android:textSize="16dp"
            android:layout_weight="5"
            android:imeOptions="actionDone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>